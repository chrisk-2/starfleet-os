# --- Normalize text repo-wide
*               text=auto

# --- Force LF on Unix-y files
*.sh            text eol=lf
*.service       text eol=lf
*.timer         text eol=lf
*.socket        text eol=lf
*.target        text eol=lf
*.mount         text eol=lf
*.path          text eol=lf
*.unit          text eol=lf
*.yml           text eol=lf
*.yaml          text eol=lf
*.json          text eol=lf
*.conf          text eol=lf
*.toml          text eol=lf
*.md            text eol=lf

# --- Keep CRLF for Windows scripts
*.bat           text eol=crlf
*.cmd           text eol=crlf
*.ps1           text eol=crlf

# --- Binary files (no conversion)
*.png           binary
*.jpg           binary
*.jpeg          binary
*.gif           binary
*.ico           binary
*.pdf           binary
*.svg           -text
*.zip           binary
*.gz            binary
*.tgz           binary
*.xz            binary
*.7z            binary
*.iso           binary
*.bin           binary
