# Top-level EditorConfig file
root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Windows batch / PowerShell scripts keep CRLF
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Markdown – keep trailing whitespace (needed for line breaks)
[*.md]
trim_trailing_whitespace = false

# JSON – 2 space indent
[*.json]
indent_size = 2

# YAML – 2 space indent
[*.yml]
indent_size = 2
